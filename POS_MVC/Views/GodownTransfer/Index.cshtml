
@{
    ViewBag.Title = "Sales Details";
}
<style type="text/css">
    fieldset {
        margin: 4px;
        border: 1px solid silver;
        padding: 4px;
        border-radius: 2px;
        border-color: lightgray;
    }

    legend {
        padding: 2px;
        font-size: 14px;
        font-weight: bolder;
        color: grey;
    }
</style>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="row">
                <div class="col-lg-12">
                    <div class="well bs-component">
                        <form class="form-horizontal">
                            <fieldset>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        Sales No:
                                    </label>
                                    <div class="col-md-4">
                                        <input id="txtPo" name="txtPo" class="form-control" />
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        Branch:
                                    </label>
                                    <div class="col-md-4">
                                        <select class="form-control" id="ddlBranch" name="ddlBranch"></select>
                                    </div>
                                    <label class="col-md-2 control-label">
                                        Supplier:
                                    </label>
                                    <div class="col-md-4">
                                        <select class="form-control" id="ddlSupplier" name="ddlSupplier"></select>
                                    </div>

                                </div>

                                <div class="ibox-title">
                                </div>
                                <div>
                                    <h2>Sales Invoicce</h2>
                                </div>
                                <div class="ibox-content" id="divInfo">

                                    <div class="form-group">
                                        <div class="col-md-12 table-responsive" id="div-product">
                                        </div>
                                    </div>

                                </div>
                                <div>
                                    <h2>Sales Details</h2>
                                </div>
                                <div class="ibox-content" id="divInfoAdd">

                                    <div class="form-group">
                                        <div class="col-md-12 table-responsive" id="div-product-add">
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>

                <div class="col-lg-4 col-lg-offset-1">
                    <form class="bs-component">
                        <fieldset></fieldset>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
<script id="templateProductModal" type="text/html">
    <table class="table table-bordered table-striped table-hover" id="productTableModal">
        <thead>
        <th>Branch</th>
        <th>SalesId</th>
        <th>TotalAmt No</th>
        <th>NetAmt</th>
        <th>CardType</th>
        <th>Details</th>
        </thead>
        <tbody>
            {{#ProductSearch}}
            <tr>
                <td> {{Branch.Name}}</td>
                <td>{{SalesId}}</td>
                <td> {{TotalAmt}}</td>
                <td> {{NetAmt}}</td>
                <td> {{CardType}}</td>
                <td class="action-sm">
                    <a class="btn btn-primary btn-xs" onclick="SalesById('{{SalesId}}')"><i class="fa fa-Add"></i> Details</a>
                </td>
            </tr>
            {{/ProductSearch}}
        </tbody>
    </table>
</script>
<script id="templateProductModalAdd" type="text/html">
    <table class="table table-bordered table-striped table-hover" id="productTableModalAdd">
        <thead>
        <th>ItemInfo</th>
        <th>Barcode</th>
        <th>Sales price</th>
        <th>WholeSalesPrice</th>
        <th>Qty</th>
        </thead>
        <tbody>
            {{#ProductSearchAdd}}
            <tr>
                <td> {{Item.ProductName}}</td>
                <td> {{Item.PBarCode}}</td>
                <td> {{Item.RetailPrice}}</td>
                <td> {{Item.WholeSalesPrice}}</td>
                <td>
                    {{QTY}}
                </td>
            </tr>
            {{/ProductSearchAdd}}
        </tbody>
    </table>
</script>
<script src="~/Scripts/app/CommonLoader.js"></script>
<script src="~/Scripts/app/SalesReport.js"></script>















