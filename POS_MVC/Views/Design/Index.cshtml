@model RiceMill_MVC.Models.Design
@{
    ViewBag.Title = "Design Setup";
}

 <div class="page-title">
                <div>
                    <h1><i class="fa fa-edit"></i> Design</h1>

                </div>
                <div>
                    <ul class="breadcrumb">
                        <li><i class="fa fa-home fa-lg"></i></li>
                        <li>Design</li>
                        <li><a href="#">Setup Design</a></li>
                    </ul>
                </div>
            </div>
 <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="well bs-component">
                                    <form class="form-horizontal">
                                        <fieldset>
                                            <div class="form-group">
                                                <label class="col-md-2 control-label">
                                                    Design Name:
                                                </label>
                                                <div class="col-md-4">
                                                    <input type="text" id="txtDesignName" name="txtDesignName" class="form-control" />
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="col-md-2 control-label">
                                                    Design Code:
                                                </label>
                                                <div class="col-md-4">
                                                    <input type="text" id="txtDesignCode" name="txtDesignCode" class="form-control" />
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="col-md-2 control-label">
                                                    Descriotion:
                                                </label>
                                                <div class="col-md-4">
                                                    <textarea id="txtDesignDes" name="txtDesignDes" class="form-control"></textarea>
                                                </div>
                                            </div>

                                            <fieldset>
                                                <div class="form-actions">
                                                    <div class="col-md-12">
                                                        <button class="btn btn-w-m btn-info" data-style="expand-left" id="btnSave" type="button" onclick="Save()"><i class="fa fa-save"></i>&nbsp; Save</button>
                                                        <button class="btn btn-w-m btn-primary" data-style="expand-left" id="btnUpdate" type="button" onclick="Update()"><i class="fa fa-save"></i>&nbsp; Update</button>
                                                        <button class="btn btn-danger" data-style="expand-left" id="btnDelete" type="button" onclick="Delete()"><i class="fa fa-minus"></i>&nbsp; Delete</button>
                                                        <button class="btn btn-w-m btn-success" type="button" id="btnReset" onclick="ResetForm()"><i class="fa fa-refresh"></i>&nbsp;Reset</button>

                                                    </div>
                                                </div>
                                            </fieldset>

                                            <div class="ibox-title">
                                                @*<h5>Color List</h5>*@
                                            </div>
                                            <br />
                                            <br />

                                            <div class="ibox-content" id="divInfo">

                                                <div class="form-group">
                                                    <div class="col-md-12 table-responsive" id="div-productGroup">
                                                    </div>
                                                </div>

                                            </div>


                                        </fieldset>
                                    </form>
                                </div>
                            </div>
                            <div class="col-lg-4 col-lg-offset-1">
                                <form class="bs-component">

                                    <fieldset>

                                        <script id="templateProductGroupModal" type="text/html">
                                            <table class="table table-bordered table-striped table-hover" id="productGroupTableModal">
                                                <thead>
                                                <th>ID</th>
                                                <th>Design Name</th>
                                                <th>Design Code</th>
                                                @*<th>Design Name</th>*@
                                                <th>Action</th>
                                                </thead>
                                                <tbody>
                                                    {{#ProductGroupSearch}}

                                                    <tr>
                                                        <td> {{Id}}</td>
                                                        <td> {{DesignName}}</td>
                                                        <td> {{DesignCode}}</td>
                                                        @*<td> {{Descriptions}}</td>*@
                                                        <td class="action-sm">
                                                            <a class="btn btn-primary btn-xs" onclick="OnSelectProductGroup('{{Id}}')"><i class="fa fa-edit"></i> Select</a>
                                                        </td>
                                                    </tr>

                                                    {{/ProductGroupSearch}}
                                                </tbody>
                                            </table>
                                        </script>

                                    </fieldset>


                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>       
<script src="~/Scripts/app/Design.js"></script>










