
@{
    ViewBag.Title = "Inventory Report";
}

<link rel="icon" type="img/x-icon" href="~/Content/Images/bill.jpg" />

<style type="text/css">
    fieldset {
        margin: 4px;
        border: 1px solid silver;
        padding: 4px;
        border-radius: 2px;
        border-color: lightgray;
    }

    legend {
        padding: 2px;
        font-size: 14px;
        font-weight: bolder;
        color: grey;
    }
</style>
<div class="page-title">
    <div>
        <h1><i class="fa fa-edit"></i>Inventory Report</h1>

    </div>
    <div>
        <ul class="breadcrumb">
            <li><i class="fa fa-home fa-lg"></i></li>
            <li>Reports</li>
            <li><a href="#">Inventory</a></li>
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="row">
                <div class="col-lg-12">
                    <div class="well bs-component">
                        <form class="form-horizontal">
                            <fieldset>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        Category:
                                    </label>
                                    <div class="col-md-4">
                                        <select class="form-control" id="ddlCategory" name="ddlCategory"></select>
                                    </div>

                                    <label class="col-md-2 control-label">
                                        Product:
                                    </label>
                                    <div class="col-md-4">
                                        <select class="form-control" id="ddlProduct" name="ddlProduct"></select>
                                    </div>                                  
                                </div>

                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        DesignId:
                                    </label>
                                    <div class="col-md-4">
                                        <input id="txtDesignId" type="text" class="form-control" />
                                    </div>

                                    <label class="col-md-2 control-label">
                                        Barcode:
                                    </label>
                                    <div class="col-md-4">
                                        <input id="txtBarcode" type="text"  class="form-control" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        From Date:
                                    </label>
                                    <div class="col-md-4">
                                        <input id="txtFromDate" type="text"  class="form-control" />
                                    </div>
                                    <label class="col-md-2 control-label">
                                        To Date:
                                    </label>
                                    <div class="col-md-4">
                                        <input id="txtToDate" type="text"  class="form-control" />
                                    </div>
                                </div>

                                <fieldset>
                                    <div class="form-actions">
                                        <div class="col-md-12">
                                            <button class="btn btn-w-m btn-info" data-style="expand-left" id="btnSave" type="button" onclick="Save()"><i class="fa fa-save"></i>&nbsp; Preview</button>
                                        </div>
                                    </div>
                                </fieldset>
                                <br />
                                <br />

                                <div class="ibox-content" id="divInfo">

                                    <div class="form-group">
                                        <div class="col-md-12 table-responsive" id="div-productGroup">
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/app/Inventory.js"></script>
