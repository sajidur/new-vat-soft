<div class="row">
    <label>Add Employee</label>
    <div class="col-md-12">
        <div class="card">
            <div class="row">
                <div class="col-lg-12">
                    <div class="well bs-component">
                        <form class="form-horizontal">
                            <fieldset>
                                <div class="form-group">
                                    <input type="hidden" id="hdId" />
                                    <label class="col-md-2 control-label">
                                        Employee Code :
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" id="txtCode" name="txtCode" class="form-control"/>
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        Designation :
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" id="txtDesignation" name="txtDesignation" class="form-control" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        First Name :
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" id="txtFirstName" name="txtFirstName" class="form-control" />
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        Last Name :
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" id="txtLastName" name="txtLastName" class="form-control" />
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        Father Name :
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" id="txtFatherName" name="txtFatherName" class="form-control" />
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        Mother Name :
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" id="txtMotherName" name="txtMotherName" class="form-control" />
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        Employee Address :
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" id="txtAddress" name="txtAddress" class="form-control" />
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        City :
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" id="txtCity" name="txtCity" class="form-control" />
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        Phone :
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" id="txtPhone" name="txtPhone" class="form-control" />
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        Email :
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" id="txtEmail" name="txtEmail" class="form-control" />
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        Zip Code :
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" id="txtZipCode" name="txtZipCode" class="form-control" />
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        Salary :
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" id="txtSalary" name="txtSalary" class="form-control" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        Employee Photo :
                                    </label>
                                    <div class="col-md-4">
                                        <input type="file" id="photoEmployeePhoto" name="photoEmployeePhoto" class="form-control" />
                                        <a href="#" class="btn btn-sm btn-danger" onclick="UploadImage()">Upload</a>
                                    </div>
                                    <div class="col-md-4 thumbnail" id="UploadedImage"></div>
                                </div>
                                
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        Remarks :
                                    </label>
                                    <div class="col-md-4">
                                        <input type="text" id="txtRemarks" name="txtRemarks" class="form-control" />
                                    </div>
                                </div>
                                
                                <fieldset>
                                    <div class="form-actions">
                                        <div class="col-md-12">
                                            <button class="btn btn-w-m btn-info" data-style="expand-left" id="btnSave" type="button" onclick="Save()"><i class="fa fa-save"></i>&nbsp; Save</button>
                                            <button class="btn btn-w-m btn-primary" data-style="expand-left" id="btnUpdate" type="button" onclick="Update()"><i class="fa fa-save"></i>&nbsp; Update</button>                                            
                                            <button class="btn btn-danger" data-style="expand-left" id="btnDelete" type="button" onclick="Delete()"><i class="fa fa-minus"></i>&nbsp; Delete</button>
                                            <button class="btn btn-w-m btn-success" type="button" id="btnReset" onclick="ResetForm()"><i class="fa fa-refresh"></i>&nbsp;Reset</button>

                                        </div>
                                    </div>
                                    
                                    <br />
                                    <br />

                                    <div class="ibox-content" id="divInfo">
                                        <div class="form-group">
                                            <div class="col-md-12 table-responsive" id="div-employeeGroup">
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script id="templateEmployeeGroupModal" type="text/html">
    <table class="table table-bordered table-striped table-hover" id="employeeGroupTableModal">
        <thead>
        <th>ID</th>
        <th>Code</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Image</th>
        <th>Action</th>
        </thead>
        <tbody>
        {{#EmployeeGroupSearch}}
        <tr>
            <td> {{Id}}</td>
            <td>{{Code}}</td>
            <td> {{FirstName}}</td>
            <td> {{LastName}}</td>
            <td> {{Email}}</td>
            <td> {{Phone}}</td>
            <td> <img src="data:image/png;base64,{{Photo}}"/></td>
            <td class="action-sm">
                <a class="btn btn-primary btn-xs" onclick="LoadForEdit('{{Id}}')"><i class="fa fa-edit"></i> Select</a>
            </td>
        </tr>

        {{/EmployeeGroupSearch}}
        </tbody>
    </table>
</script>

<script src="~/Scripts/app/Employee.js"></script>