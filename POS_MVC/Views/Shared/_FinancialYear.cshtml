    Model.FinancialYears, new { @disabled = "disabled" }
)

<script>
    $('#SelectedYearId').change(function () {
        var newYear = 2;// $("#SelectedYearId").val();
        var url = '/FinancialYear/ChangeFinancialYear?newYearId=' + newYear + '';
        $.ajax({
            url: url,
            method: 'POST',
            success: function (res) {
                console.log(res);
            },
            error: function () {
            }
        });
    });
</script>