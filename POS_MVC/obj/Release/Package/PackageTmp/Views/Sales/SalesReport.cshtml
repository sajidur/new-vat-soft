

<div class="row">
    <label>Sales Report/ বিক্রয় রিপোর্ট</label>
    <div class="col-md-12">
        <div class="card">
            <div class="row">
                <div class="col-lg-12">
                    <div class="well bs-component">
                        <form class="form-horizontal">
                            <fieldset>
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        Customer :
                                    </label>
                                    <div class="col-md-4">
                                        <select class="form-control" id="ddlCustomer" name="ddlCustomer" onchange="GetDataForCustomer()"></select>
                                    </div>
                                </div>
                                <br />
                                <div class="form-group">
                                    <label class="col-md-2 control-label">
                                        From data :
                                    </label>
                                    <div class="col-md-4">
                                        <input type="date" id="dateFromDate" name="txtFromDate" />
                                    </div>
                                    
                                    <label class="col-md-2 control-label">
                                        To data :
                                    </label>
                                    <div class="col-md-4">
                                        <input type="date" id="dateToDate" name="txtToDate" />
                                    </div>

                                </div>
                                <div class="form-group">
                                    <div class="text-right">
                                        <input type="button" class="btn btn-primary" id="btnAddSalesReport" name="btnAddSalesReport" value="Get Report"/>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                    <br /><br />
                    <div>
                        <div class="ibox-content" id="divInfo">

                            <div class="form-group">
                                <div class="col-md-12 table-responsive" id="div-salesGroup">
                                    <table class="table table-striped table-bordered table-hover order-column"
                                           id="salesReportTableModal">
                                        <thead>
                                            <tr>
                                                <th>Invoice</th>
                                                <th>Sales Order Id</th>
                                                <th>Customer</th>
                                                <th>Total Amount</th>
                                                <th>Sales Date</th>
                                                <th>Notes</th>
                                                <th>Print</th>
                                                <th>Delete</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/app/CommonLoader.js"></script>
<script src="~/Scripts/app/SalesReport.js"></script>
